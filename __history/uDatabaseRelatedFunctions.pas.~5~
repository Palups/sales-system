unit uDatabaseRelatedFunctions;

interface

function isConnected: Boolean;

implementation

uses uDM;

Function conectar : Boolean;
Begin
  DM.FDConnection1.Params.UserName := conn_name;
  DM.z_Conn.User     := connUser;
  DM.z_Conn.Password := connSenha;
  DM.z_Conn.Database := connBanco;
  DM.z_Conn.Protocol := 'mysql-5';
  DM.z_Conn.Port     := StrToInt(connPorta);

  try
    DM.z_Conn.Connected := True;
    Result := True;
  except
    ShowMessage('Erro ao conectar com o banco de dados ' + #13 + connBanco + ' em ' + connHost);
    Result := False;
  end;
end;

end.
